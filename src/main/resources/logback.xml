<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
      <file>eu.nasenberg.sparrow.log</file>
      <append>true</append>
      <encoder>
          <pattern>%-5level %date %logger{35} - %msg%n</pattern>
      </encoder>
  </appender>
  
  <root level="DEBUG">
      <appender-ref ref="FILE" />
  </root>
  
</configuration>